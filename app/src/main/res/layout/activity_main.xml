<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/bg_music"
    android:id="@+id/bgmusic"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:scaleType="centerInside"
        android:id="@+id/imageView"
        android:background="@drawable/logo_music"
        android:maxHeight="375dp"
        android:maxWidth="751dp"
        android:minHeight="375dp"
        android:minWidth="751dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="3" />

    <TextView
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="FLETCHER"
        android:id="@+id/m1_artist"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingLeft="30dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/music1"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_rowSpan="2"
        android:onClick="onm1Click"
        android:background="@drawable/p1" />

    <TextView
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Warpaint"
        android:id="@+id/m1_title"
        android:layout_row="2"
        android:layout_column="2"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_columnSpan="2"
        android:paddingLeft="30dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/music2"
        android:layout_row="3"
        android:layout_column="1"
        android:background="@drawable/p2"
        android:layout_rowSpan="2"
        android:onClick="onm2Click" />

    <TextView
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="CHVRCHES"
        android:id="@+id/m2_artist"
        android:layout_row="3"
        android:layout_column="3"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingLeft="30dp" />

    <TextView
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Clearest Blue"
        android:id="@+id/m2_title"
        android:layout_row="4"
        android:layout_column="3"
        android:textSize="20dp"
        android:textStyle="italic"
        android:paddingLeft="30dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/music3"
        android:layout_row="5"
        android:layout_column="1"
        android:background="@drawable/p3"
        android:layout_rowSpan="2"
        android:onClick="onm3Click" />

    <TextView
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Vance Joy"
        android:id="@+id/m3_artist"
        android:layout_row="5"
        android:layout_column="3"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingLeft="30dp" />

    <TextView
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fire and the Flood"
        android:id="@+id/m3_title"
        android:layout_row="6"
        android:layout_column="3"
        android:textSize="20dp"
        android:textStyle="italic"
        android:paddingLeft="30dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="STOP CURRENTLY PLAYING"
        android:id="@+id/stopButton"
        android:layout_row="7"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:onClick="onClickStop" />


</GridLayout>
